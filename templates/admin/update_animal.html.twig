{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .div-btn-submit {
            display: flex;
            justify-content: center;
        }
        .btn-submit {
            background-color: blue;
            color: white;
            border-radius: 10px;
            border: none;
            padding: 0.3em 1em;
        }
        .add-animal-title {
            text-align: center;
            margin-top: 50px;
            margin-bottom: 50px;
        }
    </style>

    <div class="example-wrapper">
        <h1 class="add-animal-title">{{ "updateAnimal" | trans }}</h1>
        {{ form_start(form) }}
        <div class="form-floating mb-3">
            {# form_widget  #}
            {{ form_widget(form.name, {attr: {class: "form-control", placeholder: "Titre"}})}}
            {{ form_label(form.name)}}
            {{ form_errors(form.name)}}
        </div>
        <div class="form-floating mb-3">
            {{ form_widget(form.age, {attr: {class: "form-control", placeholder: "Titre"}})}}
            {{ form_label(form.age)}}
            {{ form_errors(form.age)}}
        </div>
        <div class="">
            {{ form_label(form.category_id)}}
            {{ form_widget(form.category_id, {attr: {class: "form-control mb-3", placeholder: "Titre"}})}}
            {{ form_errors(form.category_id)}}
        </div>
        <div class="">
            {{ form_label(form.date_arrival)}}
            {{ form_widget(form.date_arrival, {attr: {class: "form-control mb-3", type: "date"}})}}
            {{ form_errors(form.date_arrival)}}
        </div>
        <div class="">
            {{ form_label(form.picture)}}
            {{ form_widget(form.picture, {attr: {class: "form-control mb-3", placeholder: "Titre"}})}}
            {{ form_errors(form.picture)}}
        </div>
        <div class="">
            {{ form_label(form.description)}}
            {{ form_widget(form.description, {attr: {class: "form-control mb-3", type: "date"}})}}
            {{ form_errors(form.description)}}
        </div>
        <div class="div-btn-submit">
            {{form_row(form.update, {attr: {class: "btn-submit"}})}}
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}