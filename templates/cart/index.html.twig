{% extends 'base.html.twig' %}

{% block title %}Hello Cart!
{% endblock %}

{% block body %}


	<style>


		.grosBlock {
			margin-top: 50px;
		}
		.nomProduit {
			text-align: center;
		}
		.quantityProduit,
		.prixProduit,
		.cadreBoutton {
			display: flex;
			justify-content: center;
		}

		.bouttonSupprimer {
			display: flex;
			justify-content: center;
			cursor: pointer;

		}
		.titreCategorie {
			text-align: center;
			border-bottom: solid 1px black;
			padding-bottom: 10px;
		}


		.blocboutton {
			display: flex;
			justify-content: center;
			margin-top: 50px;
		}
		.test {
			margin-top: 60px;
		}
		a {
			text-decoration: none;
		}
	</style>


	<h1 style="text-align: center; margin-top: 5%">Votre Panier</h1><br>

	<div class="container grosBlock">
		<div class="row">
			<h2 class="col-3 titreCategorie">Nom du produit</h2>
			<h2 class="col-3 titreCategorie">Quantité</h2>
			<h2 class="col-3 titreCategorie">Prix</h2>
			<h2 class="col-3 titreCategorie">Supprimer du panier</h2>
		</div>

		<ul class="list-group list-group-flush">
			{% for panier in Cart %}
				<li class="list-group-item">
					<div class="row g-3 test">
						<h3 class="col-3 nomProduit">{{ panier.productid.name }}</h3>
						<h3 class="col-3 quantityProduit">{{ panier.quantity }}</h3>

						{% if(panier.quantity > 1) %}

							<h3 class="col-3 prixProduit">{{ panier.productid.price * panier.quantity }}
								€</h3>


						{% else %}

							<h3 class="col-3 prixProduit">{{ panier.productid.price }}
								€</h3>


						{% endif %}
						<div class="col-3 cadreBoutton">
							<a href={{ path('cart_delete', {id: panier.id} ) }}>
								<button type="button" class="btn btn-primary  bouttonSupprimer">Supprimer</button>
							</a>
						</div>
					</div>
				</li>
			{% endfor %}
		</ul>
		<div class="row blocboutton">
			<div class="col-2">
				<button type="button" class="btn btn-primary ">Commander</button>
			</div>

		</div>
	</div>


{% endblock %}
