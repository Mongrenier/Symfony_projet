<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
<div style="display: flex">
    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark sidebar" style="width: 280px; position: sticky; top: 0">
        <a href="" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-4">Admin</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="{{ path('admin_animals') }}" class="nav-link text-white" aria-current="page">

                    {{ "animals" | trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_products') }}" class="nav-link text-white">

                    {{ "products" | trans }}
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">

                    {{ "candidacy" | trans }}
                </a>
            </li>
        </ul>
        <hr>
        <a href="{{ path('home_route') }}" class="deconnexion">Déconnexion</a>
    </div>

    {% block body %}

    {% endblock %}
</div>
    <style>
        .deconnexion {
            text-decoration: none;
            color: white;
        }

        .sidebar {
            height: 100vh;
        }
    </style>

</body>
