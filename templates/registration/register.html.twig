{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}


    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 style="margin-left: 10px">Inscription</h1>

    {{ form_start(registrationForm) }}
        <label style="margin-left: 10px">Email</label>
        {{ form_widget(registrationForm.email,{attr:{class:"form-control"}}) }}
        <br>
        <label style="margin-left: 10px">Mot de passe</label>
        {{ form_widget(registrationForm.plainPassword,{attr:{class:"form-control"}}) }}
        <br>
        <button type="submit" class="btn btn-lg btn-primary" style="margin-left: 10px">Inscription</button>
    {{ form_end(registrationForm) }}
{% endblock %}
